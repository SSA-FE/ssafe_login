{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true
  },

  "include": ["src", "**/*.ts", "**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
